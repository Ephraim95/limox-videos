  <script>
    // Load YouTube Player API
    var tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    document.body.appendChild(tag);

    let player;

    function onYouTubeIframeAPIReady() {
      player = new YT.Player('player', {
        height: '100%',
        width: '100%',
        videoId: '', // will set later
        playerVars: {
          autoplay: 1,
          controls: 1,
          modestbranding: 1,
          rel: 0
        }
      });

      loadVideos();
    }

    function loadNewVideo(videoId) {
      if (player && videoId) {
        player.loadVideoById(videoId);
        document.getElementById('main-player-container').scrollIntoView({ behavior: 'smooth' });
      }
    }

    function loadVideos() {
      fetch('https://raw.githubusercontent.com/Ephraim95/limox-videos/main/videos.json')
        .then(res => res.json())
        .then(videos => {
          const list = document.getElementById('videoList');
          videos.forEach((video, index) => {
            const item = document.createElement('div');
            item.className = 'video-item';
            item.innerHTML = `
              <img src="https://img.youtube.com/vi/${video.id}/hqdefault.jpg" alt="${video.title}">
              <p>${video.title}</p>
            `;
            item.onclick = () => loadNewVideo(video.id);
            list.appendChild(item);

            if (index === 0) {
              const waitUntilReady = setInterval(() => {
                if (player && typeof player.loadVideoById === 'function') {
                  player.loadVideoById(video.id);
                  clearInterval(waitUntilReady);
                }
              }, 100);
            }
          });
        })
        .catch(err => {
          console.error('Failed to load video list:', err);
        });
    }
  </script>
